{
  "name": "react-hook-tracer-root",
  "author": "Martijn Schrage (https://www.oblomov.com)",
  "version": "1.0.0",
  "private": true,
  "description": "Root package for react-hook-tracer",
  "license": "MIT",
  "workspaces": [
    "packages/react-hook-tracer",
    "apps/react-hook-tracer-demo"
  ],
  "scripts": {
    "start": "yarn --silent start-app",
    "build": "yarn workspaces run --silent build",
    "lint-check": "yarn workspaces run --silent lint-check",
    "test": "yarn workspaces run --silent test",
    "prettier-check": "prettier -l '**/*.{ts,tsx,json,md,js,scss,yml}'",
    "prettier-fix": "yarn --silent prettier-check --write",
    "build-app": "yarn workspace react-hook-tracer-demo --silent build",
    "lint-check-app": "yarn workspace react-hook-tracer-demo --silent lint-check",
    "lint-fix-app": "yarn workspace react-hook-tracer-demo --silent lint-fix",
    "start-app": "yarn workspace react-hook-tracer-demo --silent start",
    "test-app": "yarn workspace react-hook-tracer-demo --silent test",
    "build-lib": "yarn workspace react-hook-tracer --silent build",
    "build-watch-lib": "yarn workspace react-hook-tracer --silent build-watch",
    "clean-lib": "yarn workspace react-hook-tracer --silent clean",
    "lint-check-lib": "yarn workspace react-hook-tracer --silent lint-check",
    "lint-fix-lib": "yarn workspace react-hook-tracer --silent lint-fix",
    "pack-lib": "cd packages/react-hook-tracer && npm pack",
    "prepublish-lib": "yarn --silent lint-check-app && yarn --silent test-app && yarn --silent build-app",
    "publish-lib": "cd packages/react-hook-tracer && npm publish",
    "test-lib": "yarn workspace react-hook-tracer --silent test",
    "test-watch-lib": "yarn workspace react-hook-tracer --silent test-watch"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-react": "^7.31.10",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^4.8.4"
  },
  "packageManager": "yarn@3.2.4"
}
